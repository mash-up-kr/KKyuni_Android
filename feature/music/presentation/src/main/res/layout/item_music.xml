<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="video"
            type="com.mashup.kkyuni.feature.music.domain.model.Video" />

        <variable
            name="viewModel"
            type="com.mashup.kkyuni.feature.music.presentation.MusicViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:paddingHorizontal="10dp"
        app:onThrottleClick="@{() -> viewModel.onVideoClicked(video)}">

        <ImageView
            android:id="@+id/thumbail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:setMusicThumbnail="@{video.snippet.thumbnails.medium.url}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{video.snippet.title}"
                tools:text="DPAIAN- no blueberries"/>

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3:24" />
        </LinearLayout>


    </LinearLayout>
</layout>